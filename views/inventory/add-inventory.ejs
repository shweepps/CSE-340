<h1><%= title %></h1>

<!-- Display flash message if there is one -->
<!-- Display flash message if there is one -->
<%- messages() %>

<form action="/inv/add-inventory" method="POST" id="add-inventory-form">
  <!-- Select classification (make sure the selected value stays sticky) -->
  <label for="classification_id">Classification:</label>
  <%- classificationSelect %> <!-- The classification select dropdown is generated in the controller -->

  <label for="inv_make">Make:</label>
  <input type="text" id="inv_make" name="inv_make" value="<%= vehicleData ? vehicleData.inv_make : '' %>" required>

  <label for="inv_model">Model:</label>
  <input type="text" id="inv_model" name="inv_model" value="<%= vehicleData ? vehicleData.inv_model : '' %>" required>

  <label for="inv_year">Year:</label>
  <input type="text" id="inv_year" name="inv_year" value="<%= vehicleData ? vehicleData.inv_year : '' %>" required pattern="^\d{4}$" title="Please enter a 4-digit year">

  <label for="inv_description">Description:</label>
  <textarea id="inv_description" name="inv_description" required><%= vehicleData ? vehicleData.inv_description : '' %></textarea>

  <label for="inv_image">Image Path:</label>
  <input type="text" id="inv_image" name="inv_image" value="<%= vehicleData ? vehicleData.inv_image : '/images/vehicles/no-image.png' %>" required>

  <label for="inv_thumbnail">Thumbnail Path:</label>
  <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= vehicleData ? vehicleData.inv_thumbnail : '/images/vehicles/no-image-tn.png' %>" required>

  <label for="inv_price">Price:</label>
  <input type="number" id="inv_price" name="inv_price" value="<%= vehicleData ? vehicleData.inv_price : '' %>" required min="0" step="1">

  <label for="inv_miles">Miles:</label>
  <input type="number" id="inv_miles" name="inv_miles" value="<%= vehicleData ? vehicleData.inv_miles : '' %>" required min="0">

  <label for="inv_color">Color:</label>
  <input type="text" id="inv_color" name="inv_color" value="<%= vehicleData ? vehicleData.inv_color : '' %>" required>

  <button type="submit" class="submit-button">Add Vehicle</button>
</form>
