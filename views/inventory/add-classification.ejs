<h1><%= title %></h1>

<!-- Display flash message if there is one -->

        <%- messages() %>
  

<!-- Form to add new classification -->
<form action="/inv/add-classification" method="POST" id="add-classification-form">
  <label for="classification_name">Classification Name:</label>
  <input type="text" id="classification_name" name="classification_name" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>"
         title="Classification name cannot contain spaces or special characters">
  
  <button type="submit" class="submit-button">Add Classification</button>
</form>

<script src="../js/script.js">
</script>
